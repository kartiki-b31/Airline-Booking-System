<p style="color: green"><%= notice %></p>

<h1>Flights</h1><br>
<%= link_to "Show Reservations", reservations_path %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= link_to "Back to Homepage", root_path %>

<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>Flight Number</th>
    <th>Source</th>
    <th>Destination</th>
    <th>Manufacturer</th>
    <th>Flight Class</th>
    <th>Capacity</th>
    <th>Status</th>
    <th>Cost</th>
    <th colspan="4"></th>

  </tr>
  </thead>


  <tbody>
  <% @flights.each do |flight| %>
    <tr>
      <td><%= flight.name %></td>
      <td><%= flight.flight_id %></td>
      <td id="source"><%= flight.source %></td>

      <td><%= flight.destination %></td>
      <td><%= flight.manufacturer %></td>
      <td><%= flight.flight_class %></td>
      <td><%= flight.capacity %></td>
      <td><%= flight.status %></td>
      <td><%= flight.cost %></td>
      <% if is_admin? %>
      <td><%= link_to "View", flight %></td>
      <td><%= link_to 'Edit', edit_flight_path(flight) %></td>
      <td><%= link_to 'Destroy', flight, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% else %>
      <td><%= link_to_if flight.status == "Available", 'Book Tickets', new_reservation_path(:flight_id => flight.id) %></td>
      <% end %>

    </tr>
  <% end %>
  </tbody>
</table>
<% if is_admin? %>
<%= link_to "New flight", new_flight_path %>
<% end %>

