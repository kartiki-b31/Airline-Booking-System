<p style="color: green"><%= notice %></p>

<h1>Reservations</h1>
<br>   <%= link_to "Show Flights", flights_path %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= link_to "Back to Homepage", root_path %>
<table>
  <thead>
  <tr>
    <th>Passengers</th>
    <th>Reservation Id</th>
    <th>Ticket Class</th>
    <th>Amenities</th>
    <th>Total Cost</th>

    <th colspan="4"></th>

  </tr>
  </thead>

  <tbody>
  <% @reservations.each do |reservation| %>
    <tr>
      <td><%= reservation.passengers %></td>
      <td><%= reservation.res_id %></td>
      <td><%= reservation.ticket_class %></td>
      <td><%= reservation.amenities %></td>
      <td><%= reservation.total_cost %></td>

      <% if is_admin? %>
      <td><%= link_to "Show this reservation", reservation %></td>

      <td><%= link_to 'Destroy', reservation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% else %>
        <td><%= link_to "Add Baggage", new_baggage_path(:res_id => reservation.id) %></td>
      <% end %>
    </tr>

  <% end %>
  </tbody>
</table>


