<% if is_admin? %>
  <p style="color: green"><%= notice %></p>

  <h1>Users</h1>
  <form action="/users" method="GET">
    <input type="text" name="search" placeholder="Type UserName/ UserId">
    <input type="submit" value="Search">
  </form>
  <br>



  <table>
    <thead>
    <tr>
      <th>Name</th>
      <th>UserID</th>
      <th>Card</th>
      <th>Address</th>
      <th>Mobile</th>
      <th>Email</th>

      <th colspan="4"></th>

    </tr>
    </thead>


    <tbody>

    <% @users.each do |user| %>
      <tr>

        <td><%= user.name %></td>
        <td><%= user.id %></td>
        <td><%= user.card %></td>
        <td><%= user.address %></td>
        <td><%= user.mobile %></td>
        <td><%= user.email %></td>

        <td><button><%= link_to "View", user %></button></td>
        <td><button><%= link_to 'Edit', edit_user_path(user) %></button></td>
        <% unless user.email == "admin@ncsu.edu" %>
        <td><button><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
        <% end %>
          </tr>
    <% end %>
    </tbody>
  </table>
  <br><br>
  <button><%= link_to "New user", new_user_path %></button>
<% end %>
