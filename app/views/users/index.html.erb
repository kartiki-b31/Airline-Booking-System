<p style="color: green"><%= notice %></p>

<h1>Users</h1>
<form action="/users" method="GET">
  <input type="text" name="search" placeholder="Type UserName/ UserId">
  <input type="submit" value="Search">
</form>
<br>
<div id="users">
  <% @users.each do |user| %>
    <%= render user %>
    <p>
      <%= link_to "View", user %>
    </p>
  <% end %>
</div>

<%= link_to "New user", new_user_path %>
