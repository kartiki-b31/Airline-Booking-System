<p style="color: green"><%= notice %></p>

<h1>Baggages</h1>
<% if is_admin? %>
  <form action="/baggages" method="GET">
    <input type="text" name="search" placeholder="Type UserId">
    <input type="submit" value="Search">
  </form>
<% end %>

<table>
  <thead>
  <tr>
    <th>Baggage</th>
    <th>Weight</th>
    <th>Baggage Cost</th>


    <th colspan="4"></th>

  </tr>
  </thead>



  <tbody>
  <% @baggages.each do |baggage| %>
    <tr>

      <td><%= baggage.baggage_id %></td>
      <td><%= baggage.weight %></td>
      <td><%= baggage.baggage_cost %></td>

      <td><%= link_to "View baggage", baggage %></td>
    <td><%= link_to 'Edit', edit_baggage_path(baggage) %></td>
    <td><%= link_to 'Destroy', baggage, method: :delete, data: { confirm: 'Are you sure?' } %></td>

    </tr>
  <% end %>
  </tbody>


  </table>

